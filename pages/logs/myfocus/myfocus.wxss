/* pages/logs/myfocus/myfocus.wxss */

.wx_wrap {
  min-height: 375px;
}

.fav_nav {
  width: 100%;
  background: #fff;
}

.fav_nav .ul {
  display: flex;
  overflow: hidden;
}

.fav_nav .li {
  display: block;
  flex: 1;
}

.fav_nav .li.cur .a {
  color: #e4393c;
}

.fav_nav .a {
  position: relative;
  display: block;
  height: 40px;
  line-height: 40px;
  text-align: center;
  color: #333;
  font-size: 14px;
}

.fav_nav .li.cur .a:before {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  content: "";
  width: 28px;
  height: 2px;
  background: #e4393c;
}

.fav_count {
  padding: 0 10px;
  height: 40px;
  line-height: 40px;
  font-size: 12px;
  color: #666;
  background: #e8e8ed;
  position: relative;
}
.span {
  display: inline-block;
}

.fav_count em {
  margin: 0 5px;
  color: #e4393c;
}

.fav_count .fav_edit {
  float: right;
  color: #3985ff;
}

.fav_item:last-child {
  margin-bottom: 0;
}

.fav_item {
  clear: both;
  position: relative;
  background: #fff;
  overflow: hidden;
  margin-bottom: 10px;
}

.fav_select {
  display: block;
  width: 44px;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
}

.fav_item .fav_link {
  position: relative;
  z-index: 1;
  display: block;
  overflow: hidden;
  padding: 10px;
  background: #fff;
}

.fav_item .fav_link .image {
  display: block;
  float: left;
  margin-right: 10px;
  margin-top: 5px;
}

.fav_link_goods .name {
  padding-right: 10px;
  height: 42px;
  overflow: hidden;
}

.fav_item .fav_link .des, .fav_link_goods .name {
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.fav_link_goods .sku {
  color: #999;
  font-size: 12px;
  line-height: 25px;
  height: 25px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.fav_item .fav_link .seperator {
    margin-top: 10px;
}
.fav_link_goods .price {
  font-family: arial;
    color: #e4393c;
    font-size: 18px;
    line-height: 18px;
}
.fav_item .fav_link .more_notice {
    display: block;
    float: right;
    padding: 0 10px;
    border-radius: 20px 20px 20px 20px;
    border: 1px solid #3985ff;
    color: #3985ff;
    font-size: 12px;
    line-height: 18px;
    font-weight: 400;
}



.fav_item .sale_items {
    padding: 0 0 0 10px;
    font-size: 12px;
    z-index: 1;
    position: relative;
    background: #fff;
}
.fav_item .sale_items:before {
    content: "";
    height: 0;
    display: block;
    border-top: 1px solid #ddd;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
}
.fav_item .sale_items .sale_item.show {
    display: flex;
}
.fav_item .sale_items .sale_item {
    position: relative;
    padding: 15px 0;
}
.fav_item .sale_items .sale_item .mod_sign_tip {
    line-height: 10px;
    height: 10px;
    font-size: 10px;
    padding: 2px 0;
}
.mod_sign_tip {
    display: inline-block;
    background: #fff;
    position: relative;
    color: #e4393c;
    border-radius: 2px;
    min-width: 16px;
    font-size: 10px;
    line-height: 15px;
    vertical-align: middle;
    margin-top: -6px;
    margin-right: 5px;
    text-align: center;
}
.mod_sign_tip .span {
    padding: 1px 3px;
    display: inline-block;
    background: #fff;
        border: 1px solid #e4393c;
}
.fav_item .sale_items .sale_item.show {
    display: flex;
}
.fav_item .sale_items .sale_item {
    position: relative;
    padding: 15px 0;
}
.fav_item .sale_items .sale_item .sale_text {
    margin-top: -2px;
    margin-right: 25px;
    font-size: 12px;
    color: #333;
    line-height: 1.5em;
}
.fav_item .sale_items .sale_item .sale_text, .fav_nav li, .fav_tab .item {
    display: block;
    -webkit-box-flex: 1;
    box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
}
.fav_select {
    display: block;
    width: 44px;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
}