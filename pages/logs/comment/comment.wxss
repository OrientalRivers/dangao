/* pages/logs/comment/comment.wxss */
.comment_item {
    background: #fff;
    margin-bottom: 15px;
    position: relative;
    overflow: hidden;
}
.comment_item:before {
    border-color: #ccc;
    z-index: 1;
}
.comment_action .stars_list:before, .comment_detail:before, .comment_gwq:before, .comment_item:before, .comment_my_detail .article:before {
    content: "";
    height: 0;
    display: block;
    border-bottom: 1px solid #e5e5e5;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
}
.comment_item .content, .comment_my_detail .content {
    position: relative;
    display: block;
    height: 52px;
    padding: 12px 40px 12px 70px;
    background: #fafafa;
    overflow: hidden;
}
.comment_item .content .image, .comment_my_detail .content .image {
    position: absolute;
    left: 10px;
    top: 12px;
    display: block;
    width: 50px;
    height: 50px;
    border: 1px solid #ddd;
}
.comment_item .content .name, .comment_my_detail .content .name {
    font-size: 12px;
    height: 3em;
    line-height: 1.5em;
}
.comment_item .content .name, .comment_my_detail .content .name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.comment_item .content .price, .comment_my_detail .content .price {
    font-size: 12px;
    color: #e93b3d;
}
.comment_item .a.content .right_ico, .comment_my_detail .a.content .right_ico {
    right: 20px;
}
.comment_item .a.content .right_ico, .comment_my_detail .a.content .right_ico {
    margin-top: -6px;
    transform: rotate(135deg);
    -webkit-transform: rotate(135deg);
}
.comment_item .action .btn i, .comment_item .a.content .right_ico, .comment_my_detail .a.content .right_ico {
    position: absolute;
    top: 50%;
    width: 12px;
    height: 12px;
    border-top: 1px solid #7d7d7d;
    border-left: 1px solid #7d7d7d;
    background: none;
}

.comment_item .foot {
    position: relative;
    margin: 0 10px;
    padding: 10px 0;
    height: 30px;
}
.comment_item .action {
    position: absolute;
    top: 10px;
    right: 0;
    overflow: hidden;
}
.comment_item .action .btn {
    position: relative;
    border-radius: 2px;
    width: 78px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    float: left;
    margin-left: 5px;
    font-size: 12px;
}
.btn_small, .comment_images .btn, .comment_item .action .btn_1, .comment_item .inner_images .p .a, .comment_moreList .btn {
    background: #3884ff;
    color: #fff;
}
.comment_item .inner {
    display: none;
    position: relative;
    background: #f8f8f8;
    padding: 0 10px 1px;
    margin: 5px 10px 10px;
    font-size: 12px;
    color: #999;
}
.comment_item .inner .arrow {
    z-index: 1;
    background: #f8f8f8;
    position: absolute;
    top: -8px;
    right: 30px;
    border-top: 1px solid #e5e5e5;
    border-left: 1px solid #e5e5e5;
    width: 16px;
    height: 16px;
    -webkit-transform: rotate(45deg) scale(.5);
    transform: rotate(45deg) scale(.5);
}
.comment_view {
    position: relative;
    overflow: hidden;
    height: 45px;
    line-height: 45px;
}
.comment_view .label {
    font-size: 14px;
    color: #333;
}
.comment_view .stars {
    position: absolute;
    left: 40px;
    top: 13px;
}
.stars .i {
    position: relative;
    display: block;
    float: left;
    width: 20px;
    height: 20px;
   
}
.comment_textarea {
    position: relative;
    overflow: hidden;
}
.inner .comment_textarea .textarea_wrap {
    background: #fff;
}
.textarea_wrap {
    padding: 10px;
    background: #fff;
    position: relative;
}
.textarea_wrap:before {
    border-color: #e5e5e5;
}
.textarea_wrap textarea {
    resize: none;
    width: 100%;
    height: 70px;
    border: none;
    background: none;
    font-size: 12px;
}
.comment_item .inner:after, .textarea_wrap:before {
    content: "";
    display: block;
    border: 1px solid #e5e5e5;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    pointer-events: none;
}
.comment_images_row {
    padding: 0;
}
.comment_images {
    position: relative;
    /* padding: 15px 0 15px 50px; */
}
.comment_images_row .label {
    display: block;
    position: static;
    margin: 10px 0;
}
.comment_images .label {
    /* position: absolute; */
    left: 0;
    top: 50%;
    font-size: 14px;
    color: #333;
    /* margin-top: -10px; */
}
.comment_images .label .small {
  display: inline-block;
    font-size: 10px;
    color: #999;
}
.comment_images_row .images {
    margin-bottom: 20px;
}
.images {
    height: 50px;
}
.images .li {
    position: relative;
    float: left;
    margin-right: 10px;
    width: 50px;
    height: 50px;
}
.images .li .btn_add {
    position: relative;
    display: block;
    width: 48px;
    height: 48px;
    background: #fff;
    border: 1px dashed #ddd;
}
.comment_gwq {
    margin: 5px 0;
    font-size: 12px;
    position: relative;
    padding-top: 10px;
}
.comment_gwq .select {
    display: block;
    padding: 5px 10px 5px 25px;
    color: #333;
    position: relative;
}
.comment_gwq icon {
    background-position: 0 0;
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -3px;
}
.mod_btns {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    overflow: hidden;
    margin: 15px 10px;
}
.mod_btns .mod_btn.bg_2, .mod_btns .mod_btn.mod_btn_bg1 {
    background: #3884ff;
    color: #fff;
}
.mod_btns .mod_btn {
    display: block;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    min-width: 0;
    height: 46px;
    line-height: 46px;
    text-align: center;
    font-size: 16px;
    border-radius: 4px;
    position: relative;
}